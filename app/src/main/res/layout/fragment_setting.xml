<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvBooked"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/booked"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvFavouriteStyles"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favourite_styles"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvFavouriteSaloons"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favourite_saloons"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvDetails"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_details"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvPayment"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_methods"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvPreferences"
        android:padding="8dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvHelp"
        android:padding="8dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvLogOut"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:textSize="18sp"/>
</LinearLayout>